{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es2022"],
		"module": "NodeNext",
		"moduleDetection": "force",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022"
	}
}
